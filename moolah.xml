<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade" >
	<name>plg_content_moolah</name>
	<author>Moolah E-Commerce</author>
	<creationDate>October 2012</creationDate>
	<copyright>Copyright (C) 2012 Moolah E-commerce. All rights reserved.</copyright>
	<license>GPL 2.0</license>
	<authorEmail>development@moolah-ecommerce.com</authorEmail>
	<authorUrl>moolah-ecommerce.com</authorUrl>
	<version>2.0.0</version>
	<description>PLG_CONTENT_MOOLAH_XML_DESCRIPTION</description>
	<files>
		<filename plugin="moolah">moolah.php</filename>
		<filename>index.html</filename>
		<filename>moolah.xml</filename>
	</files>
	<languages folder="language/en-GB" >
		<language tag="en-GB" >en-GB.plg_content_moolah.ini</language>
		<language tag="en-GB" >en-GB.plg_content_moolah.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
			
				<field name="STORE_ID" type="text" label="Store ID" size="32"
					description="PLG_CONTENT_MOOLAH_STORE_ID_DESC"
                    default=""
				/>
				
				<field name="CATEGORY_ID" type="text" label="Category ID" size="32"
					description="PLG_CONTENT_MOOLAH_CATEGORY_ID_DESC"
                    default=""
				/>
				
				<field name="PRODUCT_ID" type="text" label="Product ID" size="32"
					description="PLG_CONTENT_MOOLAH_PRODUCT_ID_DESC"
				/>

                <field name="DIV_ID" type="text" label="DIV ID" size="32"
                   description="PLG_CONTENT_MOOLAH_DIV_ID_DESC"
                   default="moolah"
                />

                <field name="TESTING" type="radio" label="Testing"
                       default="0"
                       description="PLG_CONTENT_MOOLAH_TESTING_DESC"
                        >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
				
			</fieldset>

		</fields>
	</config>
</extension>
